<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.client">
    <uses-permission id="android.permission.ACCESS_GPS" />
    <application android:icon="@drawable/icon">
        <activity android:name=".MyContatsClient" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.client.action.LOGIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	 <activity android:name=".PendingFriendsList" android:label="@string/title_pending_friends">
            <intent-filter>
                <action android:name="android.client.action.PENDING" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

         <activity android:name=".RegisterActivity" android:label="@string/title_register">
            <intent-filter>
                <action android:name="android.client.action.REGISTER" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
	<activity android:name=".MainLoopActivity" android:label="@string/title_main_loop">
            <intent-filter>
                <action android:name="android.client.action.MAIN_LOOP" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <service android:name=".MyContactService" >
            <intent-filter>
             <action android:name="android.client.MY_SERVICE" />
             <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>
</manifest> 