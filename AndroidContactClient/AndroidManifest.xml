<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.client">
    <application android:icon="@drawable/icon" android:label="My Contacts">
        <activity android:name=".MyContatsClient" android:label="@string/app_name" android:icon="@drawable/icon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN_LOOP" />
                <action android:name="android.client.action.LOGIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	 <activity android:name=".FriendsList" >
            <intent-filter>
                <action android:name="android.client.action.PENDING" />
                <action android:name="android.client.action.ALL_USERS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

         <activity android:name=".RegisterActivity" android:label="@string/title_register">
            <intent-filter>
                <action android:name="android.client.action.REGISTER" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
	<activity android:name=".MainLoopActivity" android:label="@string/title_main_loop">
            <intent-filter>
                <action android:name="android.client.action.MAIN_LOOP" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <service android:name=".MyContactService" android:process=":remote">
            <intent-filter>
             <action android:name="android.client.MY_SERVICE" />
             <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>
<uses-permission android:name="android.permission.ACCESS_GPS">
</uses-permission></manifest> 