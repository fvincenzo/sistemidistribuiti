<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.client">
    <application android:label="@string/app_name" android:persistent="false" android:icon="@drawable/my_contacts">
        <activity android:label="@string/app_name" android:name="MyContatsClient">
            <intent-filter>
                <action android:name="android.intent.action.MAIN_LOOP" />
                <action android:name="android.client.action.LOGIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            <action android:name="android.intent.action.MAIN">
</action></intent-filter>
        </activity>
	 <activity android:name="FriendsList">
            <intent-filter>
                <action android:name="android.client.action.PENDING" />
                <action android:name="android.client.action.ALL_USERS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

         <activity android:label="@string/title_register" android:name="RegisterActivity">
            <intent-filter>
            	<action android:name="android.client.action.REGISTER" />
                <action android:name="android.client.action.MODIFY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
	<activity android:label="@string/title_main_loop" android:name="MainLoopActivity">
            <intent-filter>
                <action android:name="android.client.action.MAIN_LOOP" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <service android:process=":remote" android:name="MyContactService">
            <intent-filter>
             <action android:name="android.client.MY_SERVICE" />
             <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    <service android:name="FriendsService">
    <intent-filter>
             <action android:name="android.client.FRIEND_SERVICE" />
             <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
</service></application>
<uses-permission android:name="android.permission.ACCESS_GPS">
</uses-permission>
<uses-permission android:name="android.permission.READ_CONTACTS">
</uses-permission><uses-permission android:name="android.permission.WRITE_CONTACTS">
</uses-permission><uses-permission android:name="android.permission.ACCESS_LOCATION">
</uses-permission><uses-permission android:name="android.permission.ACCESS_ASSISTED_GPS">
</uses-permission></manifest> 